
# The name you use to ssh to the host
login_user: vagrant

# It is highly recommended to change these to prevent information disclosure / guessable names
#
# version can be 'master' for bleeding edge, or 'latest-release' for most recent numbered release

discourse:
  user: discourse
  path: /var/www/discourse
  version: master
  prod:
    db: discourse_prod
    dbpasswd: mysupersecreetpassword
    id: 0
    hostname: www.example.com
  test:
    db: discourse_test
    dbpasswd: mysupersecreetpassword
    id: 0
    hostname: localhost

# mandrillapp.com is a dev recommendation (12k emails/month for free)
# use API key for password (if necessary)

smtp:
  fqdn: mandrillapp.com
  port: 587
  user: username@domain.com
  passwd: api_key_or_password


